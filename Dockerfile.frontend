# Use an older, more compatible Nginx image to avoid kernel issues in some local K8s environments
FROM nginx:1.21-alpine

# Copy the custom Nginx configuration first
COPY nginx.conf /etc/nginx/nginx.conf

# Set the working directory for the web content
WORKDIR /usr/share/nginx/html

# Remove the default Nginx welcome page
RUN rm -f index.html

# Copy our custom index.html file to the container
COPY index.html .